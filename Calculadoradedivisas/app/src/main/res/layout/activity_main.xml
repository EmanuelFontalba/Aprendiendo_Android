<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:weightSum="5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="De Euros a ..."
                android:id="@+id/textView"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="2.27"
                android:layout_gravity="center_vertical"
                android:background="#353434"
                android:textColor="#d4d4d4"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_gravity="bottom"
            android:weightSum="4">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="USD"
                    android:id="@+id/buttonUSD"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="JPY"
                    android:id="@+id/buttonJPY"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="BGN"
                    android:id="@+id/buttonBGN"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="CZK"
                    android:id="@+id/buttonCZK"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="DKK"
                    android:id="@+id/buttonDKK"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="GBP"
                    android:id="@+id/buttonGBP"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="HUF"
                    android:id="@+id/buttonHUF"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="PLN"
                    android:id="@+id/buttonPLN"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="RON"
                    android:id="@+id/buttonRON"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="SEK"
                    android:id="@+id/buttonSEK"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="CHF"
                    android:id="@+id/buttonCHF"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="NOK"
                    android:id="@+id/buttonNOK"
                    android:background="@drawable/botonnaranja"
                    android:layout_weight="1"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
